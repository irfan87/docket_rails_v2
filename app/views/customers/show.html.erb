<div class="container">
	<div class="col-md-12">
		<div class="col-md-7 col-md-offset-2">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h1><%= @customer.customer_name %>'s Detail</h1>
				</div>
				<div class="panel-body">
					<ul class="list-unstyled horizontal">
						<li>
							<strong>Customer Address</strong>
							<%= @customer.customer_address %>
						</li>
						<li>
							<strong>Customer Postcode</strong>
							<%= @customer.customer_postcode %>
						</li>
						<li>
							<strong>Customer Phone Number</strong>
							<%= @customer.customer_phone_number %>
						</li>
						<li>
							<strong>Customer HP Number</strong>
							<%= @customer.customer_hp_number %>
						</li>
					</ul>
				</div>
				<div class="panel-footer">
					<%= link_to 'Edit Detail', edit_user_customer_path(current_user, @customer), class: 'btn btn-primary panel-right' %>
					<%= link_to 'Delete Customer', user_customer_path(current_user, @customer), class: 'btn btn-danger panel-right', method: :delete, data: {confirm: 'Are you sure want to delete this user detail?'} %>
				</div>
			</div>
		</div>
	</div>
</div>