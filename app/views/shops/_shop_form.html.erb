<%= form_for([current_user, @shop]) do |f| %>
	<div class="form-group">
		<%= f.label :shop_name, 'shop name'.upcase %>
		<%= f.text_field :shop_name, autofocus: true, placeholder: 'Shop Name', class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :shop_address, 'address'.upcase %>
		<%= f.text_area :shop_address, placeholder: 'Address', class: 'form-control', cols: 2, rows: 5 %>
	</div>
	<div class="form-group">
		<%= f.label :shop_postcode, 'postcode'.upcase %>
		<%= f.text_field :shop_postcode, placeholder: 'Postcode', class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :shop_state, 'state'.upcase %>
		<%= f.text_field :shop_state, placeholder: 'State', class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :shop_phone, 'phone number (primary)'.upcase %>
		<%= f.text_field :shop_phone, placeholder: 'Phone Number (Primary)', class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :shop_another_phone, 'phone number (secondary)'.upcase %>
		<%= f.text_field :shop_another_phone, placeholder: 'Phone Number (Secondary) - Optional', class: 'form-control' %>
	</div>
	<div class="clearfix"></div>
	<div class="form-group">
		<%= f.submit class: 'form-control btn btn-primary' %>
	</div>
<% end %>